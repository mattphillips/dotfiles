[user]
  name = Matt Phillips
[push]
  default = simple
[alias]
  ap = add -p
  au = add -u
  ano = commit --amend --no-edit
  bd = branch -d
  br = branch
  ci = commit
  ciam = commit -am
  cim = commit -m
  cl = clone
  co = checkout
  d = diff
  dc = diff --cached
  f = "!git ls-files | grep -i"
  fb = "!f() { git checkout -b feature/$1; }; f"
  ig = "!f() { index=1; for arg in $@; do echo $arg >> .gitignore; let index+=1; done; }; f"
  new="!f() { git init && git checkout -b master && git commit --allow-empty -m 'Initial commit'; }; f
  mnff = merge --no-ff
  p = push
  pb = push -u origin HEAD
  pf = push --force
  r = reset
  r1 = reset HEAD^
  r2 = reset HEAD^^
  rh = reset --hard
  rh1 = reset HEAD^ --hard
  rh2 = reset HEAD^^ --hard
  st = status
  visual = !gitk
